<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Freelancers</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Freelancers</item>
                    <item name="label" xsi:type="string" translate="true">Freelancers</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Yudiz\Freelancer\Block\Frontend\FreelancerCollection" name="list_freelancers" template="Yudiz_Freelancer::freelancerlist.phtml" ifconfig="freelancer/general/enable" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
